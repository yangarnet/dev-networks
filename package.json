{
  "name": "developer-networks",
  "version": "1.0.0",
  "description": "full stack nodejs react",
  "main": "server.js",
  "scripts": {
    "client-install": "npm install --prefix client",
    "client": "npm start --prefix client",
    "start": "npm run build && node build/server.js",
    "start-watch": "npm run start",
    "dev": "concurrently \"npm run start\" \"npm run client\"",
    "clean:build": "rm -rf build && mkdir build",
    "clean": "npm run clean:build",
    "copy:build": "cp src/config/settings.json build/config/",
    "copy": "npm run copy:build",
    "build": "npm run clean && babel src -d build --presets es2015,stage-0 --ignore *.spec.js && npm run copy",
    "test": "export NODE_ENV=test || SET \"NODE_ENV=test\" && mocha **/**/*.spec.js **/**/**/*.spec.js --require babel-core/register --require babel-polyfill",
    "test-watch": "nodemon --exec 'npm test'"
  },
  "keywords": [
    "react",
    "nodejs"
  ],
  "author": "gyang",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.2",
    "concurrently": "^3.5.1",
    "express": "^4.16.3",
    "express-graphql": "0.6.12",
    "graphql": "0.13.2",
    "graphql-tools": "^3.0.2",
    "gravatar": "^1.6.0",
    "jsonwebtoken": "^8.2.1",
    "lodash": "^4.17.10",
    "mongodb": "^3.0.8",
    "mongoose": "^5.0.17",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "validator": "^10.1.0"
  },
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "chai": "^4.1.2",
    "istanbul": "^0.4.5",
    "mocha": "^5.2.0",
    "nodemon": "^1.17.4",
    "sinon": "^5.0.10",
    "supertest": "^3.1.0"
  }
}
